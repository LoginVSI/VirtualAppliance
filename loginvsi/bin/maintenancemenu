#!/bin/bash
  if [ ! -z $(docker ps -a -f name=VSI_appliancemanagement --format "{{.Image}}") ]; then
    echo "ApplianceManagement container already exists, not recreating.."
  else  
    docker service create --name VSI_appliancemanagement --publish 8000:8000 --secret ADMIN_PASSWORD --secret APPLIANCEMANAGEMENT_PFX --secret APPLIANCEMANAGEMENT_PFX_PASSWORD loginvsi/appliancemanagement:stable
  fi
  nohup /loginvsi/bin/maintenanceworker &> /var/log/VSI_appliancemanagement &
  